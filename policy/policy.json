{
  "properties": {
    "displayName": "Restrict VM sizes",
    "description": "This policy restricts which VM sizes can be deployed",
    "mode": "All",
    "parameters": {
      "allowedSizes": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed VM sizes",
          "description": "The list of VM sizes that can be deployed"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "not": {
              "field": "Microsoft.Compute/virtualMachines/sku.name",
              "in": "[parameters('allowedSizes')]"
            }
          }
        ]
      },
      "then": {
        "effect": "Deny"
      }
    }
  }
}
